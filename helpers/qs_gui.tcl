#------------------------------------------------------------------------------
#     helper functions for print array keys and their values
#------------------------------------------------------------------------------

puts "pl & pl0 are loaded"

#------------------------------------------------------------------------------
#------------------------------------------------------------------------------
proc pl { arrName } {
	upvar  $arrName arr

	foreach key [lsort [array names arr]] {
		puts "$key => $arr($key)"
	}
}

#------------------------------------------------------------------------------
#------------------------------------------------------------------------------
proc pl0 { arrName } {
	upvar  $arrName arr
	
	foreach {key value} [array get arr] {
		puts "$key => $value"
    }
}

